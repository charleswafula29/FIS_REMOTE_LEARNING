<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.fairmontsintenational.fis_remote_learning">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/security_config"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:targetApi="n">
        <activity android:name=".classes.SendMail"/>
        <activity
            android:name=".UserProfile"
            android:theme="@style/LightAccentTitle"/>
        <activity android:name=".BottomPopupActivity" />
        <activity
            android:name=".RegisterStudent"
            android:theme="@style/WhiteStatusBar" />
        <activity
            android:name=".StudentProfiles"
            android:theme="@style/WhiteStatusBar" />
        <activity
            android:name=".SingleStudentProfile"
            android:theme="@style/LightAccentTitle" />
        <activity
            android:name=".Register"
            android:theme="@style/LightAccentTitle" />
        <activity
            android:name=".Login"
            android:theme="@style/LightAccentTitle" />
        <activity
            android:name=".Homepage"
            android:theme="@style/LightAccentTitle" />
        <activity
            android:name=".Introduction"
            android:theme="@style/WhiteStatusBar" />
        <activity
            android:name=".SplashScreen"
            android:theme="@style/WhiteStatusBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>